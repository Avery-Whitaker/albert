$("#modal").html("<%=escape_javascript(render :partial => 'jobs/grade', :locals => {job: @job})%>");
$(".modals").show();
$(".modals").fadeTo(200, 1.0);

$("#modal").css({
    'margin-top': function () { //vertical centering
        return -($(this).height() /2);
    },
    'margin-left': function () { //Horizontal centering
        return -($(this).width() /2);
    }
});
