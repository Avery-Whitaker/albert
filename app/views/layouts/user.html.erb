<!--
Menubar for Users
-->


<body>
<% content_for :top_menu do %>
  <!-- % SideBar % -->
  <div class="topbar" id="topbar" >
    <%if @problemsets%>
      <% @problemsets.each do |problemset| %>
      <span class="dropdown">
        <a href="#" class="dropdown-toggle topbar-element" data-toggle="dropdown"> <%= problemset.title %></a>
          <ul class="dropdown-menu pull-left">
            <% problemset.problems.each do |problem| %>
            <li><%= link_to(problem.title, "#p#{problem.id}", class:"topbar-text")%></li>
            <%end%>
          </ul>
        </span>
      <%end%>
    <%else%>
      <a href="#" class="dropdown-toggle topbar-element" data-toggle="dropdown"> No Problemsets to display, are you logged on?</a>

    <%end%>
  </div>
<% end %>
 
